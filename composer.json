{
    "name": "johnyhunt/php-esb",
    "type": "library",
    "description": "Enterprise service bus with PHP implementation",
    "keywords": ["esb", "bus", "data-transfer"],
    "license": "MIT",
    "authors": [
        {
            "name": "Eugene N.",
            "email": "evnec@opsway.com"
        },
        {
            "name": "Maxym G.",
            "email": "magod@opsway.com"
        }
    ],
    "require": {
        "ext-json": "*",
        "ext-pcntl": "*",
        "ext-curl": "*",
        "php": "^8.1",
        "php-di/php-di": "^6.4",
        "slim/slim": "4.*",
        "nyholm/psr7": "^1.5",
        "nyholm/psr7-server": "^1.0",
        "ramsey/uuid": "^4.5",
        "beberlei/assert": "^3.3",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^5.4.0"
    },
    "autoload": {
        "psr-4": {
            "ESB\\": "src/",
            "Example\\": "example/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ESB\\Test\\": "tests/"
        }
    },
    "scripts": {
        "phpunit": "phpunit --verbose --colors=always",
        "psalm": "psalm --show-info=false"
    }
}
